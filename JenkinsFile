pipeline {
    
    agent any

    parameters{
        string(name: 'VERSION', defaultValue: '', description: 'Desc')
        choice(name: 'VERSION', choices: ['1.1.0','1.2.0','1.3.0'],description: 'Desc')
        booleanParam(name: 'executeTest', defaultValue: true, description: 'Desc')

    }


    // tools {
    //     maven 'Maven'
    //     gradle 'Tool Name In Global Tools config jenkins'
    // }

    environment {
        NEW_VERSION='1.3.0'
    //     SERVER_CREDENTIALS = credentials('server-credentials') // to access the credentials in all the stages
    }

    stages{
        
 //       stage("Checkout"){
 //           steps{
 //               echo "Checkout Stage"
 //           }

 //       }
        
        stage("Build"){
            // when{
            //     expression {
            //         env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'master' 
            //     }
            // }
            steps{
                echo "Build Stage"
                sh "
                echo ${env.NEW_VERSION}
                "
                // echo "Building Version ${NEW_VERSION}"
            }
        }
        
        stage("Test"){
            // when{
            //     expression {
                    // env.BRANCH_NAME == 'main' && CODE_CHANGES == true 
            //     }
            // }
            steps{
                echo "Test Stage"           
            }
        }
        
        stage("Deploy"){

            when{
                expression {
                    // params.executeTests == true
                    params.executeTests
                }
            }

            steps{
                echo "Deploy Stage"
                withCredentials([
                    usernamePassword(credentials: 'server-credentials', usernameVariable: USER, passwordVariable: PWD)
                ]) {
                    sh "
                    some script ${USER}:${PWD}@
                    " 
                }
                echo "deploying version ${params.VERSION}"
            }
        }

        stage("CleanUp"){
            steps{
                echo "CleanUp Stage"
            }
        }
        // post{
        //     always {
                
        //     }
        //     success {

        //     }
        //     failure {

        //     }

        // }
    }
}

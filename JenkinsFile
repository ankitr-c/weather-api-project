pipeline {
    // agent{
    //     label
    // }
    agent any
    stages {
        stage("Code") {
            steps{
                echo "Code Stage"
                git branch: 'main', credentialsId: 'git-pat', url: 'https://github.com/ankitr-c/weather-api-project.git'
            }
            
        }
        stage("Build") {
            steps{
            echo "Build Stage"
            sh "docker build -t ankitraut0987/weatherapp:1.0.0.RELEASE ."
            }
        }
        stage("Push") {
            steps{
            echo "Push Stage"
            withCredentials([usernamePassword(credentialsId: 'dockercred', passwordVariable: 'pass', usernameVariable: 'user')]) {
                sh "docker login -u ${env.user} -p ${env.pass}"
                sh "docker push ankitraut0987/weatherapp:1.0.0.RELEASE"
            }

            }
        }
        stage("Deploy") {
            steps{
            echo "Deploy Stage"
            sh "docker-compose down && docker-compose up -d"
            }
        }
    }
}

